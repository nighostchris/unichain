{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./built/",
    "rootDir": "./src/",
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "*.js",
    "node_modules",
    "**/*.spec.ts"
  ]
}

{
  "compilerOptions": {
    "strict": true,
    "target": "es2021",
    "rootDir": "./src/",
    "declaration": true,
    "module": "commonjs",
    "outDir": "./built/",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "removeComments": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
